{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "integration/**/*",
    "workers/**/*",
    "core/**/*",
    "triggers/**/*",
    "events/**/*",
    "memory/**/*",
    "roundtable/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dashboard"
  ]
}
